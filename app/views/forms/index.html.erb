<%= render partial: "pages/dashboardnav" %>

<!-- Forms Listing -->
<section class="hero is-fullheight-with-navbar is-dashboard-content">
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Form Name</th>
          <th>Created</th>
          <th>Contributions</th>
          <th>Amount</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
      <% @forms.each do |form| %>
        <tr>
          <th><%= form.formName.capitalize %></th>
          <td><%= form.created_at.strftime("%B %d, %Y") %></td>
          <td><%= form.contributions.count %></td>
          <td><%= number_to_currency(contribution_sum(form), precision: 2, strip_insignificant_zeros: true) %></td>
          <td class="has-text-weight-semibold"><%= link_to "Delete", form_path(form), method: :delete, data: {confirm: "Are you sure?"}, class:"button is-small is-danger is-rounded" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
